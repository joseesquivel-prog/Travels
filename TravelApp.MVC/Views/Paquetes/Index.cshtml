@model IEnumerable<TravelApp.MVC.Models.Paquete>

@{
    ViewData["Title"] = "Paquetes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-box me-2"></i>Gestión de Paquetes</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Nuevo Envío
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Remitente</th>
                            <th>Destinatario</th>
                            <th>Ruta</th>
                            <th>Peso</th>
                            <th>Estado</th>
                            <th>Fecha Envío</th>
                            <th>Entrega Estimada</th>
                            <th>Costo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreRemitente @item.ApellidoRemitente</td>
                                <td>@item.NombreDestinatario @item.ApellidoDestinatario</td>
                                <td>
                                    <span class="badge bg-info">@item.Origen</span>
                                    <i class="fas fa-arrow-right mx-1"></i>
                                    <span class="badge bg-success">@item.Destino</span>
                                </td>
                                <td>@item.Peso kg</td>
                                <td>
                                    @switch (item.Estado)
                                    {
                                        case "Pendiente":
                                            <span class="badge bg-warning">@item.Estado</span>
                                            break;
                                        case "En Tránsito":
                                            <span class="badge bg-info">@item.Estado</span>
                                            break;
                                        case "Entregado":
                                            <span class="badge bg-success">@item.Estado</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@item.Estado</span>
                                            break;
                                    }
                                </td>
                                <td>@item.FechaEnvio.ToString("dd/MM/yyyy")</td>
                                <td>@item.FechaEntregaEstimada.ToString("dd/MM/yyyy")</td>
                                <td class="fw-bold text-success">$@item.CostoTotal().ToString("N2")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.IdPaquete" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No hay paquetes registrados</h4>
                <p class="text-muted">Comienza enviando tu primer paquete</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Enviar Paquete
                </a>
            </div>
        }
    </div>
</div>