@model TravelApp.MVC.Models.Paquete

@{
    ViewData["Title"] = "Detalles del Paquete";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="fas fa-box me-2"></i>Detalles del Paquete</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Información del Remitente</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Model.NombreRemitente @Model.ApellidoRemitente</dd>
                            
                            <dt class="col-sm-4">Correo:</dt>
                            <dd class="col-sm-8">@Model.CorreoRemitente</dd>
                        </dl>
                        
                        <h5 class="text-success mb-3">Información del Destinatario</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Model.NombreDestinatario @Model.ApellidoDestinatario</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-info mb-3">Información del Envío</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Origen:</dt>
                            <dd class="col-sm-8"><span class="badge bg-info">@Model.Origen</span></dd>
                            
                            <dt class="col-sm-4">Destino:</dt>
                            <dd class="col-sm-8"><span class="badge bg-success">@Model.Destino</span></dd>
                            
                            <dt class="col-sm-4">Peso:</dt>
                            <dd class="col-sm-8">@Model.Peso kg</dd>
                            
                            <dt class="col-sm-4">Estado:</dt>
                            <dd class="col-sm-8">
                                @switch (Model.Estado)
                                {
                                    case "Pendiente":
                                        <span class="badge bg-warning">@Model.Estado</span>
                                        break;
                                    case "En Tránsito":
                                        <span class="badge bg-info">@Model.Estado</span>
                                        break;
                                    case "Entregado":
                                        <span class="badge bg-success">@Model.Estado</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@Model.Estado</span>
                                        break;
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Fecha Envío:</dt>
                            <dd class="col-sm-8">@Model.FechaEnvio.ToString("dd/MM/yyyy")</dd>
                            
                            <dt class="col-sm-4">Entrega Estimada:</dt>
                            <dd class="col-sm-8">@Model.FechaEntregaEstimada.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Descripcion))
                {
                    <hr>
                    <h5 class="text-secondary mb-3">Descripción del Contenido</h5>
                    <p class="bg-light p-3 rounded">@Model.Descripcion</p>
                }
                
                <hr>
                
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-success text-center">
                            <h5 class="mb-0">
                                <i class="fas fa-dollar-sign me-2"></i>
                                Costo Total: $@Model.CostoTotal().ToString("N2") MXN
                            </h5>
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>