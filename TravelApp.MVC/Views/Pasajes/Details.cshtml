@model TravelApp.MVC.Models.Pasaje

@{
    ViewData["Title"] = "Detalles del Pasaje";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Detalles del Pasaje</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Información del Pasajero</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Model.Nombres @Model.Apellidos</dd>
                            
                            <dt class="col-sm-4">Correo:</dt>
                            <dd class="col-sm-8">@Model.Correo</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-success mb-3">Información del Viaje</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Origen:</dt>
                            <dd class="col-sm-8"><span class="badge bg-info">@Model.Origen</span></dd>
                            
                            <dt class="col-sm-4">Destino:</dt>
                            <dd class="col-sm-8"><span class="badge bg-success">@Model.Destino</span></dd>
                            
                            <dt class="col-sm-4">Fecha:</dt>
                            <dd class="col-sm-8">@Model.FechaSalida.ToString("dd/MM/yyyy")</dd>
                            
                            <dt class="col-sm-4">Horario:</dt>
                            <dd class="col-sm-8">@Model.Horario</dd>
                            
                            <dt class="col-sm-4">Asientos:</dt>
                            <dd class="col-sm-8"><span class="badge bg-secondary">@Model.CanAsientos</span></dd>
                        </dl>
                    </div>
                </div>
                
                <hr>
                
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-success text-center">
                            <h5 class="mb-0">
                                <i class="fas fa-dollar-sign me-2"></i>
                                Costo Total: $@Model.CostoTotal().ToString("N2") MXN
                            </h5>
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>