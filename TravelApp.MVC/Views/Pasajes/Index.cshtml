@model IEnumerable<TravelApp.MVC.Models.Pasaje>

@{
    ViewData["Title"] = "Pasajes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-ticket-alt me-2"></i>Gesti√≥n de Pasajes</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Nuevo Pasaje
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Pasajero</th>
                            <th>Correo</th>
                            <th>Ruta</th>
                            <th>Fecha</th>
                            <th>Horario</th>
                            <th>Asientos</th>
                            <th>Costo Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombres @item.Apellidos</td>
                                <td>@item.Correo</td>
                                <td>
                                    <span class="badge bg-info">@item.Origen</span>
                                    <i class="fas fa-arrow-right mx-1"></i>
                                    <span class="badge bg-success">@item.Destino</span>
                                </td>
                                <td>@item.FechaSalida.ToString("dd/MM/yyyy")</td>
                                <td>@item.Horario</td>
                                <td>
                                    <span class="badge bg-secondary">@item.CanAsientos</span>
                                </td>
                                <td class="fw-bold text-success">$@item.CostoTotal().ToString("N2")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.IdPasaje" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No hay pasajes registrados</h4>
                <p class="text-muted">Comienza creando tu primer pasaje</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Crear Pasaje
                </a>
            </div>
        }
    </div>
</div>