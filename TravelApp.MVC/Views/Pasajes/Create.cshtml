@model TravelApp.MVC.Models.Pasaje

@{
    ViewData["Title"] = "Nuevo Pasaje";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Reservar Pasaje</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombres" class="form-label"></label>
                            <input asp-for="Nombres" class="form-control" placeholder="Ingrese sus nombres" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Apellidos" class="form-label"></label>
                            <input asp-for="Apellidos" class="form-control" placeholder="Ingrese sus apellidos" />
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Origen" class="form-label"></label>
                            <select asp-for="Origen" class="form-select">
                                <option value="">Seleccione origen</option>
                                @if (ViewBag.Ciudades != null)
                                {
                                    @foreach (var ciudad in (List<TravelApp.MVC.Models.Ciudad>)ViewBag.Ciudades)
                                    {
                                        <option value="@ciudad.Nombre">@ciudad.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="Origen" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Destino" class="form-label"></label>
                            <select asp-for="Destino" class="form-select">
                                <option value="">Seleccione destino</option>
                                @if (ViewBag.Ciudades != null)
                                {
                                    @foreach (var ciudad in (List<TravelApp.MVC.Models.Ciudad>)ViewBag.Ciudades)
                                    {
                                        <option value="@ciudad.Nombre">@ciudad.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="Destino" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="FechaSalida" class="form-label"></label>
                            <input asp-for="FechaSalida" class="form-control" type="date" />
                            <span asp-validation-for="FechaSalida" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Horario" class="form-label"></label>
                            <select asp-for="Horario" class="form-select">
                                <option value="">Seleccione horario</option>
                                <option value="06:00">06:00 AM</option>
                                <option value="08:00">08:00 AM</option>
                                <option value="10:00">10:00 AM</option>
                                <option value="12:00">12:00 PM</option>
                                <option value="14:00">02:00 PM</option>
                                <option value="16:00">04:00 PM</option>
                                <option value="18:00">06:00 PM</option>
                                <option value="20:00">08:00 PM</option>
                            </select>
                            <span asp-validation-for="Horario" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="CanAsientos" class="form-label"></label>
                            <input asp-for="CanAsientos" class="form-control" type="number" min="1" max="10" />
                            <span asp-validation-for="CanAsientos" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Precio por pasaje:</strong> $50.00 MXN
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Reservar Pasaje
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Validar que origen y destino sean diferentes
        document.querySelector('form').addEventListener('submit', function(e) {
            const origen = document.querySelector('[name="Origen"]').value;
            const destino = document.querySelector('[name="Destino"]').value;
            
            if (origen === destino && origen !== '') {
                e.preventDefault();
                alert('El origen y destino no pueden ser iguales');
            }
        });

        // Calcular costo total en tiempo real
        const asientosInput = document.querySelector('[name="CanAsientos"]');
        if (asientosInput) {
            asientosInput.addEventListener('input', function() {
                const cantidad = parseInt(this.value) || 0;
                const total = cantidad * 50;
                
                let totalElement = document.querySelector('#total-cost');
                if (!totalElement) {
                    totalElement = document.createElement('div');
                    totalElement.id = 'total-cost';
                    totalElement.className = 'alert alert-success mt-2';
                    this.parentNode.appendChild(totalElement);
                }
                
                if (cantidad > 0) {
                    totalElement.innerHTML = `<i class="fas fa-calculator me-2"></i><strong>Costo Total: $${total.toFixed(2)} MXN</strong>`;
                    totalElement.style.display = 'block';
                } else {
                    totalElement.style.display = 'none';
                }
            });
        }
    </script>
}